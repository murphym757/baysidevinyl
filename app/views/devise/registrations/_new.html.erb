<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


<header class="formpage">
    <div class="col-md-8 col-md-offset-2">
        <img class="logo-heading-form"><%= image_tag("Bayside Logo.svg", alt: "logo-img", height: 720, width: 720) %></img>
    </div>
      <div class="entirepanel">
        <div class="panel-body">
          <div class="field">
              <%= f.email_field :email, autofocus: true, placeholder: "Enter email" %>
          </div>

            <div class="field">
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>
                    characters minimum)</em>
                <% end %><br/>
                <%= f.password_field :password, autocomplete: "off", placeholder: "Enter password" %>
            </div>

            <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password" %>
            </div>

            <div class="actions">
                <%= f.submit "Sign up" %>
            </div>
            <% end %>

            <br>
            <%= render "devise/shared/links" %>

        </div>
      </div>
    </header>
