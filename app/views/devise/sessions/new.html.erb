<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<header class="formpage2">
    <div class="col-md-8 col-md-offset-2">
        <img class="logo-heading-form2"><%= image_tag("Bayside Logo.svg", alt: "logo-img", height: 720, width: 720) %></img>
    </div>
    <div class="entirepanel2">
        <div class="container .col-xs-12 .col-sm-6 .col-md-8">
            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-heading">Sign in</div>
                    <div class="panel-body">
                        <div class="field">
                            <%= f.text_field :login, autofocus: true, placeholder: "Enter username" %>
                        </div>

                        <div class="field">
                            <%= f.password_field :password, autocomplete: "off", placeholder: "Enter password" %>
                        </div>

                        <% if devise_mapping.rememberable? -%>
                        <div class="field">
                            <%= f.check_box :remember_me %>
                        </div>
                        <% end -%>

                        <div class="actions">
                            <%= f.submit "Log in" %>
                        </div>
                        <% end %>

                        <br>
                        <%= render "devise/shared/links" %>

                    </div>
                </div>
            </div>
        </div>
      </div>
</header>
