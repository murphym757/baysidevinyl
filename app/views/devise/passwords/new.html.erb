<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<header class="formpage2">
    <div class="col-md-8 col-md-offset-2">
        <img class="logo-heading-form2"><%= image_tag("Bayside Logo.svg", alt: "logo-img", height: 720, width: 720) %></img>
    </div>
    <div class="entirepanel2">
        <div class="container .col-xs-12 .col-sm-6 .col-md-8">
            <div class="row">
              <div class="panel panel-default">
                  <div class="panel-heading">Forgot your password?</div>
                  <div class="panel-body">
                    <div class="field">
                        <%= f.email_field :email, autofocus: true, placeholder: "Enter email" %>
                    </div>

                      <div class="actions">
                        <%= f.submit "Send me reset password instructions" %>
                      </div>
                    <% end %>

                      <br>
                        <%= render "devise/shared/links" %>

                    </div>
                </div>
            </div>
        </div>
      </div>
</header>
